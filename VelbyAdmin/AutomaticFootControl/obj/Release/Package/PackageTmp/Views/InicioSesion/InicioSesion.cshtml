@model AutomaticFootControl.Models.Usuario.UsuarioModelo
@{
    ViewBag.Title = "Inicio Sesión";
    Layout = "~/Views/Shared/_LayoutInicioSesion.cshtml";
}

@using (Html.BeginForm("ValidarUsuarioContrasenia", "InicioSesion", FormMethod.Post, new { @class = "Form", Id = "idFormulario" }))
{
    <h1 class="Form-title">
        <center>Inicio sesión</center>
    </h1>
    <div class="Form-fields">
        @Html.AntiForgeryToken()
        <div class="form-group has-feedback has-clear">
            <label class="sr-only">Usuario</label>
            <div class="input-group">
                <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                @Html.TextBoxFor(model => model.Correo, new { @class = "form-control", @name = "Correo", @placeholder = "Correo", @maxlength = 30, @autofocus = true, @autocomplete = "off", @required = "required" })
            </div>
        </div>

        <div class="form-group has-feedback has-clear">
            <label class="sr-only">Usuario</label>
            <div class="input-group">
                <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                @Html.TextBoxFor(model => model.Contrasenia, new { @type = "password", @class = "form-control", @name = "Contraseña", @placeholder = "Contraseña", @maxlength = 15, @autofocus = true, @autocomplete = "off", @required = "required" })
            </div>
        </div>
        <div>
            <button id="btnIngresar" class="btn btn-lg btn-dark btn-block" type="submit">Ingresar</button>
        </div>
        @if (Model != null && Model.Pantalla != null && !string.IsNullOrEmpty(Model.Pantalla.MensajeInformativo))
        {
            <div class="form-group has-feedback has-clear">
                <center>
                    <label style="color:red;">@Model.Pantalla.MensajeInformativo</label>
                </center>
            </div>
        }
    </div>
}

